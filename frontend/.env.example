# Gacha Frontend Environment Variables
# Copy this file to .env.local for local development
# For Render.com, these are set automatically via render.yaml

# ===========================================
# REQUIRED: Backend API URL
# ===========================================
# Local development:
VITE_API_URL=http://localhost:3000
# Production (set automatically by Render):
# VITE_API_URL=https://gacha-api.onrender.com

# ===========================================
# OPTIONAL: OpenHotel Integration
# ===========================================
# Enable OpenHotel social features (set to "true" to enable)
VITE_OPENHOTEL_ENABLED=false

# OpenHotel server HTTP URL (for REST endpoints)
# Local development:
VITE_OPENHOTEL_HTTP_URL=http://localhost:3005
# Production:
# VITE_OPENHOTEL_HTTP_URL=https://openhotel-server.onrender.com

# OpenHotel WebSocket URL (optional - derived from HTTP URL if not set)
# Uses wss:// in production, ws:// in development
# VITE_OPENHOTEL_WS_URL=wss://openhotel-server.onrender.com

# ===========================================
# OPTIONAL: Debug Settings
# ===========================================
# Enable OpenHotel debug logging (development only)
VITE_OPENHOTEL_DEBUG=false
